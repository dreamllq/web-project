# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myapp

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# ===========================================
# Storage Configuration
# ===========================================
# Storage provider: 's3' | 'minio' | 'local'
STORAGE_PROVIDER=s3

# S3 Configuration (AWS S3, Cloudflare R2, Aliyun OSS, Tencent COS)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=false

# MinIO Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=avatars
MINIO_USE_SSL=false

# Local Configuration (for development only)
LOCAL_UPLOAD_DIR=./uploads
LOCAL_BASE_URL=http://localhost:3000/uploads

# ===========================================
# Legacy Storage Variables (Backward Compatible)
# ===========================================
# These map to S3_* variables for backward compatibility
# STORAGE_ACCESS_KEY_ID=
# STORAGE_SECRET_ACCESS_KEY=
# STORAGE_REGION=
# STORAGE_BUCKET=
# STORAGE_ENDPOINT=
# STORAGE_FORCE_PATH_STYLE=
